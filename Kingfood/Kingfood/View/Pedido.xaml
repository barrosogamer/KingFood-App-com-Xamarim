<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Pedido"
             x:Class="Kingfood.View.Pedido">
    <ContentPage.Content>
        <StackLayout Orientation="Horizontal">
            <Label Text="Coxinha"></Label>
            <Stepper Maximum="100"
                 Increment="1"
                 HorizontalOptions="Center"
                 ValueChanged="Stepper_ValueChanged"/>
            <Label Text="{Binding QtdCoxinha}"></Label>
            <Label Text="{Binding TotalFormatado}"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>